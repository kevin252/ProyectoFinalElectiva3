

  <script src="javascripts/general/cargos/cargoCtl.js" type="text/javascript"></script>
  <script src="javascripts/general/cargos/cargoSer.js" type="text/javascript"></script>
<div class="container">
      <div class="row">
          <div class="col-md-6">
              <div class="panel panel-login">
                  <div class="panel-heading">
                    <h1>Gesti√≥n Cargos</h1>


                  </div>
                  <div class="panel-body">
                      <div class="row">
                          <div class="col-lg-12">
                              <form id="cargo-form" role="form" name="formCargo"
                                    ng-controller="CtlCargo" style="display: block;">
                                    <div class="form-group">
                                        <input type="text" name="id"
                                               id="id" class="form-control"
                                               ng-model="cargo.id" style="display:none">
                                    </div>
                                  <div class="form-group">
                                    <label >Nombre</label>
                                      <input type="text" name="nombre"
                                             id="nombre" class="form-control"
                                             placeholder="Nombre"
                                             ng-model="cargo.nombre" required>
                                  </div>
                                  <div class="form-group">
                                    <label >Descripcion</label>
                                      <input type="text" name="descripcion"
                                             id="descripcion" class="form-control"
                                             placeholder="Descripcion"
                                             ng-model="cargo.descripcion" required>
                                  </div>
                                  <div class="form-group">
                                    <label >salario</label>
                                      <input type="number" name="salario"
                                             id="salario" class="form-control"
                                             placeholder="Salario"
                                             ng-model="cargo.salario" required>
                                  </div>
                                  <div class="form-group">
                                    <label >Horario</label>
                                      <input type="text" name="horario"
                                             id="horario" class="form-control"
                                             placeholder="Horario"
                                             ng-model="cargo.horario" required>
                                  </div>
                                  <div class="form-group">
                                    <label for="selProyecto" class="col-lg-2 control">Proyecto</label>
                                    <div class="form-group">
                                        <select class="form-control" id="selProyecto" ng-model="cargo.proyecto" ng-options="item.id as item.nombre for item in proyectos">
                                            <option value="" disabled selected>Seleccione una Opcion</option>
                                        </select>
                                    </div>
                                  </div>




                                  <div class="form-group">
                                      <div class="row">
                                          <div class="col-sm-6 col-sm-offset-3">
                                              <input type="button" name="crear-submit"
                                                     id="crear-submit"
                                                     class="form-control btn btn-login"
                                                     value="Crear" ng-click="crearCargo(formCargo.$valid)">
                                          </div>
                                      </div>
                                  </div>

                                  <div class="form-group">
                                      <div class="row">
                                          <div class="col-sm-6 col-sm-offset-3">
                                              <input type="button" name="crear-submit"
                                                     id="crear-submit"
                                                     class="form-control btn btn-login"
                                                     value="Editar" ng-click="editarCargo(formCargo.$valid)">
                                          </div>
                                      </div>
                                  </div>
                                  <div class="panel panel-primary" style="width: 900px;">
                                    <div class="panel-heading">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-search"></i>
                                            </span>
                                            <input type="text" class="form-control"
                                                   placeholder="Buscar Costo" ng-model="txtBuscar">
                                        </div>
                                    </div>
                                  <div class="panel-body">
                                     <table class="table table-striped">
                                         <thead>
                                             <tr>
                                                 <th>
                                                     <a ng-click="ordenarPor('id')">Id</a>
                                                     <a class="caret" ng-click="ordenarPor('-id')"></a>
                                                 </th>
                                                 <th>
                                                     <a ng-click="ordenarPor('nombre')">Nombre</a>
                                                     <a class="caret" ng-click="ordenarPor('-nombre')"></a>
                                                 </th>
                                                 <th>
                                                     <a ng-click="ordenarPor('descripcion')">Descripcion</a>
                                                     <a class="caret" ng-click="ordenarPor('-descripcion')"></a>
                                                 </th>
                                                 <th>
                                                     <a ng-click="ordenarPor('salario')">Salario</a>
                                                     <a class="caret" ng-click="ordenarPor('-salario')"></a>
                                                 </th>
                                                 <th>
                                                     <a ng-click="ordenarPor('horario')">Horario</a>
                                                     <a class="caret" ng-click="ordenarPor('-horarios')"></a>
                                                 </th>
                                                 <th>
                                                     <a ng-click="ordenarPor('proyecto')">Proyecto</a>
                                                     <a class="caret" ng-click="ordenarPor('-proyecto')"></a>
                                                 </th>
                                                 <th>
                                                     <a>Opcion</a>
                                                 </th>
                                             </tr>
                                         </thead>
                                         <tbody>
                                             <tr ng-repeat="obj in cargos| orderBy:ordenarSeleccionado
                                                         | filter:txtBuscar" ng-click="llenarCampos(obj)">
                                                 <td ng-bind="obj.id"></td>
                                                 <td ng-bind="obj.nombre"></td>
                                                 <td ng-bind="obj.descripcion"></td>
                                                 <td ng-bind="obj.salario"></td>
                                                 <td ng-bind="obj.horario"></td>
                                                 <td ng-bind="obj.proyecto"></td>

                                                 <td><input type="button" class="btn btn-default" value="Eliminar"
                                                            ng-click="eliminarCargo(obj)"></td>
                                             </tr>
                                         </tbody>
                                     </table>
                                 </div>
                               </div>

                              </form>

                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
