<script src="javascripts/general/reunion/reunionCtl.js" type="text/javascript"></script>
<script src="javascripts/general/reunion/reunionSer.js" type="text/javascript"></script>
<script src="javascripts/general/proyecto/proyectoSer.js" type="text/javascript"></script>
<div class="container">
	<div class="row">
		<div class="col-md-6">
			<div class="panel panel-login">
				<div class="panel-heading">
					<h1>Gestión Reuniones</h1>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<form id="reunion-form" role="form" name="formReunion"
							ng-controller="CtlReunion" ng-init="listarProyectos();">

							<div class="form-group">
								<label for="selEtapa" class="col-lg-4 control">Proyecto</label>
								<div class="form-group">
									<select class="form-control" id="selEtapa" ng-model="reunion.proyecto" ng-options="item.id as item.nombre for item in proyectos" ng-change="listarReuniones();">
										<option value="" disabled selected>Seleccione una Opcion</option>
									</select>
								</div>
							</div>

							<div id="datosReunion" ng-show="reunion.proyecto !== undefined">
								<div class="form-group">
									<label for="ubicacion" class="col-lg-4 control">Ubicación</label>
									<input type="text" name="ubicacion"
									id="ubicacion" class="form-control"
									placeholder="Ubucacion"
									ng-model="reunion.ubicacion" required>
								</div>

								<div class="form-group">
									<label for="tematica" class="col-lg-4 control-label">Temática</label>
									<input type="text" name="tematica"
									id="tematica" class="form-control"
									placeholder="Tematica"
									ng-model="reunion.tematica" required>
								</div>

								<div class="form-group">
									<div class="row">
										<div class="col-sm-6 col-sm-offset-3">
											<input type="button" name="crear-submit"
											id="crear-submit"
											class="form-control btn btn-login"
											value="Crear" ng-click="crearReunion();">
										</div>
									</div>
								</div>

								<div class="form-group" ng-show="reunion.id !== undefined">
									<div class="row">
										<div class="col-sm-6 col-sm-offset-3">
											<input type="button" name="crear-submit"
											id="crear-submit"
											class="form-control btn btn-login"
											value="Editar" ng-click="editarReunion();">
										</div>
									</div>
								</div>
							</div>
							
							<div id="reunionesProyecto" ng-if="reuniones.length > 0">
								<h4>Reuniones del Proyecto</h4>
								<div class="panel panel-primary" style="width: 1100px;">
									<div class="panel-heading">
										<div class="input-group">
											<span class="input-group-addon">
												<i class="glyphicon glyphicon-search"></i>
											</span>
											<input type="text" class="form-control"
											placeholder="Buscar Reunion" ng-model="txtBuscar">
										</div>
									</div>
									<div class="panel-body">
										<table class="table table-striped">
											<thead>
												<tr>
													<th>
														<a ng-click="ordenarPor('ubicacion')">Ubicación</a>
														<a class="caret" ng-click="ordenarPor('-ubicacion')"></a>
													</th>
													<th>
														<a ng-click="ordenarPor('tematica')">Temática</a>
														<a class="caret" ng-click="ordenarPor('-tematica')"></a>
													</th>
													<th>
														<a>Opcion</a>
													</th>
												</tr>
											</thead>
											<tbody>
												<tr ng-repeat="obj in reuniones| orderBy:ordenarSeleccionado
												| filter:txtBuscar" ng-click="llenarCampos(obj)">
												<td ng-bind="obj.ubicacion"></td>
												<td ng-bind="obj.tematica"></td>
												<td><input type="button" class="btn btn-default" value="Eliminar"
													ng-click="eliminarReunion(obj)"></td>
												</tr>
											</tbody>
										</table>
									</div>
								</div>
							</div>		
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
