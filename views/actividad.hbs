

  <script src="javascripts/general/actividad/actividadCtl.js" type="text/javascript"></script>
  <script src="javascripts/general/actividad/actividadSer.js" type="text/javascript"></script>
<div class="container">
      <div class="row">
          <div class="col-md-6 col-md-offset-3">
              <div class="panel panel-login">
                  <div class="panel-heading">


                  </div>
                  <div class="panel-body">
                      <div class="row">
                          <div class="col-lg-12">
                              <form id="actividad-form" role="form" name="formActividad"
                                    ng-controller="CtlActividad" style="display: block;">
                                    <div class="form-group">
                                        <input type="text" name="id"
                                               id="id" class="form-control"
                                               ng-model="actividad.id" style="display:none">
                                    </div>
                                  <div class="form-group">
                                    <label >Nombre</label>
                                      <input type="text" name="nombre"
                                             id="nombre" class="form-control"
                                             placeholder="Nombre"
                                             ng-model="actividad.nombre" required>
                                  </div>
                                  <div class="form-group">
                                    <label >Descripcion</label>
                                      <input type="text" name="descripcion"
                                             id="descripcion" class="form-control"
                                             placeholder="Descripcion"
                                             ng-model="actividad.descripcion" required>
                                  </div>
                                  <div class="form-group">
                                    <label for="dateFecha" class="col-lg-2 control-label">Fecha de Inicio</label>
                                    <div class="form-group">
                                        <input type="date" class="form-control" id="fecha"
                                        placeholder="Fecha inicio" ng-model="actividad.fecha_inicio" required>
                                    </div>
                                  </div>
                                  <div class="form-group">
                                    <label for="dateFecha" class="col-lg-2 control-label">Fecha Fin</label>
                                    <div class="form-group">
                                        <input type="date" class="form-control" id="fecha"
                                        placeholder="Fecha Fin" ng-model="actividad.fecha_fin" required>
                                    </div>
                                  </div>

                                  <div class="form-group">
                                    <label >Comentario</label>
                                      <input type="text" name="comentario"
                                             id="comentario" class="form-control"
                                             placeholder="Comentario"
                                             ng-model="actividad.comentario" required>
                                  </div>

                                  <div class="form-group">
                                    <label for="selProyecto" class="col-lg-2 control">Proyecto</label>
                                    <div class="form-group">
                                        <select class="form-control" id="selProyecto" ng-model="actividad.proyecto" ng-options="item.id as item.nombre for item in proyectos">
                                            <option value="" disabled selected>Seleccione una Opcion</option>
                                        </select>
                                    </div>
                                  </div>

                                  <div class="form-group">
                                    <label for="selResponsable" class="col-lg-2 control">Responsable</label>
                                    <div class="form-group">
                                        <select class="form-control" id="selResponsable" ng-model="actividad.responsable" ng-options="item.id as item.nombre for item in responsables">
                                            <option value="" disabled selected>Seleccione una Opcion</option>
                                        </select>
                                    </div>
                                  </div>

                                  <div class="form-group">
                                      <div class="row">
                                          <div class="col-sm-6 col-sm-offset-3">
                                              <input type="button" name="crear-submit"
                                                     id="crear-submit"
                                                     class="form-control btn btn-login"
                                                     value="Crear" ng-click="crearActividad(formActividad.$valid)">
                                          </div>
                                      </div>
                                  </div>

                                  <div class="form-group">
                                      <div class="row">
                                          <div class="col-sm-6 col-sm-offset-3">
                                              <input type="button" name="crear-submit"
                                                     id="crear-submit"
                                                     class="form-control btn btn-login"
                                                     value="Editar" ng-click="editarActividad(formActividad.$valid)">
                                          </div>
                                      </div>
                                  </div>
                                  <div class="panel panel-primary" style="width: 900px;">
                                    <div class="panel-heading">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-search"></i>
                                            </span>
                                            <input type="text" class="form-control"
                                                   placeholder="Buscar Costo" ng-model="txtBuscar">
                                        </div>
                                    </div>
                                  <div class="panel-body">
                                     <table class="table table-striped">
                                         <thead>
                                             <tr>
                                                 <th>
                                                     <a ng-click="ordenarPor('id')">Id</a>
                                                     <a class="caret" ng-click="ordenarPor('-id')"></a>
                                                 </th>
                                                 <th>
                                                     <a ng-click="ordenarPor('nombre')">Nombre</a>
                                                     <a class="caret" ng-click="ordenarPor('-nombre')"></a>
                                                 </th>
                                                 <th>
                                                     <a ng-click="ordenarPor('descripcion')">Descripcion</a>
                                                     <a class="caret" ng-click="ordenarPor('-descripcion')"></a>
                                                 </th>
                                                 <th>
                                                     <a ng-click="ordenarPor('fecha_inicio')">Fecha Inicio</a>
                                                     <a class="caret" ng-click="ordenarPor('-fecha_inicio')"></a>
                                                 </th>
                                                 <th>
                                                     <a ng-click="ordenarPor('fecha_fin')">Fecha fin</a>
                                                     <a class="caret" ng-click="ordenarPor('-fecha_fin')"></a>
                                                 </th>
                                                 <th>
                                                     <a ng-click="ordenarPor('comentario')">Comentario</a>
                                                     <a class="caret" ng-click="ordenarPor('-comentario')"></a>
                                                 </th>
                                                 <th>
                                                     <a ng-click="ordenarPor('proyecto')">Proyecto</a>
                                                     <a class="caret" ng-click="ordenarPor('-proyecto')"></a>
                                                 </th>
                                                 <th>
                                                     <a ng-click="ordenarPor('responsable')">responsable</a>
                                                     <a class="caret" ng-click="ordenarPor('-responsable')"></a>
                                                 </th>
                                                 <th>
                                                     <a>Opcion</a>
                                                 </th>
                                             </tr>
                                         </thead>
                                         <tbody>
                                             <tr ng-repeat="obj in actividades| orderBy:ordenarSeleccionado
                                                         | filter:txtBuscar" ng-click="llenarCampos(obj)">
                                                 <td ng-bind="obj.id"></td>
                                                 <td ng-bind="obj.nombre"></td>
                                                 <td ng-bind="obj.descripcion"></td>
                                                 <td ng-bind="obj.fecha_inicio | date:'shortDate'"></td>
                                                 <td ng-bind="obj.fecha_fin | date:'shortDate'"></td>
                                                 <td ng-bind="obj.comentario"></td>
                                                 <td ng-bind="obj.proyecto"></td>
                                                 <td ng-bind="obj.responsable"></td>

                                                 <td><input type="button" class="btn btn-default" value="Eliminar"
                                                            ng-click="eliminarActividad(obj)"></td>
                                             </tr>
                                         </tbody>
                                     </table>
                                 </div>
                               </div>

                              </form>

                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
